---
 arch/x86/kernel/cpu/mcheck/mce.c | 9 +++++++++
 1 file changed, 9 insertions(+)

diff --git a/arch/x86/kernel/cpu/mcheck/mce.c b/arch/x86/kernel/cpu/mcheck/mce.c
index 7cf650b..588e80c 100644
--- a/arch/x86/kernel/cpu/mcheck/mce.c
+++ b/arch/x86/kernel/cpu/mcheck/mce.c
@@ -50,6 +50,10 @@
 #include <asm/msr.h>
 #include <asm/local.h>
 
+#ifdef CONFIG_XEN_MCE_LOG
+#include <xen/xen.h>
+#endif
+
 #include "mce-internal.h"
 
 static DEFINE_MUTEX(mce_chrdev_read_mutex);
@@ -2615,6 +2619,11 @@ static __init int mcheck_init_device(void)
 	free_cpumask_var(mce_device_initialized);
 
 err_out:
+#ifdef CONFIG_XEN_MCE_LOG
+       /* in case of Xen, the character device was already registered, so do not
+        * treat this as an error */
+       if (!xen_initial_domain() || err != -EBUSY)
+#endif
 	pr_err("Unable to init device /dev/mcelog (rc: %d)\n", err);
 
 	return err;
